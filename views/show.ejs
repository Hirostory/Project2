<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/mainshow.css">
</head>
<body>

    <%- include('./partials/header.ejs') %>
    <div class="topline"></div>    

<div class="head-sections">
    <h1>Current Wardrobe</h1>
    <h3><%= wardrobe.title.name %></h3>
</div>

<div class="edit-back">
    <a class="editback-button" href="/stylemate/<%=wardrobe.id%>/edit">EDIT</a> 
    <span class="editback-button" >|</span>
    <a class="editback-button" href="/stylemate">BACK</a>
</div>
    <div class="bottomline"></div>

   <div class="head-sections">
        <h1>TOPS</h1>
        <div class="topline"></div>
   </div>
     <div class="wardrobe-container">
        <% for(let i = 0; i < wardrobe.tops.length; i++) { %>
            <div class="image-name">
                <a href=<%= wardrobe.tops[i].link %>>
                     <img src= <%= wardrobe.tops[i].img %>>
                </a>
                <h2><%= wardrobe.tops[i].name %></h2>
             </div>
             
        <% } %>
             <div class="add-item-wardrobe">
                <a href="/top/<%= wardrobe.id %>">
                    <img class="add-item-image" src="../plus-sign.png" alt="">
                </a>
                <h5>add/view items</h5>
             </div>
        
     </div>
     <div class="bottomline"></div>
     <div class="head-sections">
        <h1>BOTTOMS</h1>
        <div class="topline"></div>
   </div>
     <div class="wardrobe-container">
        <% for(let i = 0; i < wardrobe.bottoms.length; i++) { %>
            <div class="image-name">
                <a href=<%= wardrobe.bottoms[i].link %>>
                    <img src= <%= wardrobe.bottoms[i].img %>>
                </a>
                <h2><%= wardrobe.bottoms[i].name %></h2>
            </div>
        <% } %>
        <div class="add-item-wardrobe">
            <a href="/bottom/<%= wardrobe.id %>">
                <img class="add-item-image" src="../plus-sign.png" alt="">
            </a>
            <h5>add/view items</h5>
         </div>
     </div>
     <div class="bottomline"></div>
     <div class="head-sections">
        <h1>SHOES</h1>
        <div class="topline"></div>
   </div>
      <div class="wardrobe-container">
        <% for(let i = 0; i < wardrobe.shoes.length; i++) { %>
            <div class="image-name">
                <a href=<%= wardrobe.shoes[i].link %>>
                    <img class="shoe-image" src= <%= wardrobe.shoes[i].img %>>
                </a>
                <h2><%= wardrobe.shoes[i].name %></h2>
            </div>
        <% } %>
        <div class="add-item-wardrobe">
            <a href="/shoe/<%= wardrobe.id %>">
                <img class="add-item-image" src="../plus-sign.png" alt="">
            </a>
            <h5>add/view items</h5>
         </div>
      </div>
      <div class="bottomline"></div>
      <div class="head-sections">
        <h1>INSPIRATIONS</h1>
        <div class="topline"></div>
      </div> 
        <div class="wardrobe-container">
            
            <% for(let i = 0; i < wardrobe.inspirations.length; i++) { %>
            <div class="image-name">
                <img  src= <%= wardrobe.inspirations[i].img %>>
            </div>
        <% } %>
        <div class="add-item-wardrobe">
            <a href="/inspiration/<%= wardrobe.id %>">
                <img class="add-item-image" src="../plus-sign.png" alt="">
            </a>
            <h5>add/view items</h5>
         </div>
        </div>
        <div class="topline"></div>
        <%- include('./partials/footer.ejs') %>
</body>
</html>